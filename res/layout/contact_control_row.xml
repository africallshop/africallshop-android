   	    android:layout_weight="0.7"
   	    android:orientation="vertical"
   	    android:paddingLeft="5dp"
	   	android:paddingRight="5dp"
   	    >
   	      	<LinearLayout
   	      	    android:layout_width="match_parent"
		   	    android:layout_height="match_parent"
		   	    android:orientation="horizontal"
		   	    android:weightSum="1"
   	      	    >
   	      	   
   	      	   <ImageView
			   	    android:id="@+id/dial"
			   	    android:layout_width="0dp"
			   	    android:layout_height="match_parent"
			   	    android:layout_weight="0.5"
			   	    android:contentDescription="@string/content_description_dial_back"
			   	    android:gravity="center"
			   	    android:scaleType="fitCenter"
			   	    android:src="@drawable/call_answer_default_custom"/>
   	      	   
   	      	   <ImageView
			   	    android:id="@+id/start_chat"
			   	    android:layout_width="0dp"
			   	    android:layout_height="match_parent"
			   	    android:layout_weight="0.5"
			   	    android:contentDescription="@string/content_description_chat"
			   	    android:gravity="center"
			   	    android:scaleType="fitCenter"
			   	    android:src="@drawable/chat_icon_over_custom" />   	      	    
   	      	</LinearLayout>
   	      	
	   	    <LinearLayout
   	      	    android:layout_width="match_parent"
		   	    android:layout_height="match_parent"
		   	    android:orientation="horizontal"
		   	    android:weightSum="1"
   	      	    >
   	      	   
   	      	   <TextView 
			   	    android:id="@+id/price_call"
			   	    android:layout_width="0dp"
			   	    android:layout_height="match_parent"
			   	    android:layout_weight="0.5"
					android:textColor="@color/text_contrast"
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:gravity="center"
			        android:ellipsize="end"/>
   	      	   
   	      	   	<TextView 
			   	    android:id="@+id/price_tchat"
			   	    android:layout_width="0dp"
			   	    android:layout_height="match_parent"
			   	    android:layout_weight="0.5"
					android:textColor="@color/text_contrast"
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:gravity="center"
			        android:ellipsize="end"/>
   	      	   	
